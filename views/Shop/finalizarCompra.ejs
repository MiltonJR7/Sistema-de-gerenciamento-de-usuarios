
<link rel="stylesheet" href="/css/finalizarCompra.css">
<main class="container py-4">
    <div class="step-indicator mb-5">
        <div class="step-item">
            <div class="step-circle completed">
                <i class="bi bi-check-lg"></i>
            </div>
            <span class="step-label">Carrinho</span>
        </div>
        <div class="step-arrow">→</div>
        <div class="step-item">
            <div class="step-circle active">2</div>
            <span class="step-label">Endereço</span>
        </div>
        <div class="step-arrow">→</div>
        <div class="step-item">
            <div class="step-circle">3</div>
            <span class="step-label">Pagamento</span>
        </div>
        <div class="step-arrow">→</div>
        <div class="step-item">
            <div class="step-circle">4</div>
            <span class="step-label">Confirmação</span>
        </div>
    </div>

    <div id="step-content" class="row g-4">
        <div class="col-lg-8">
            <section id="address-section">
                <h2 class="section-title mb-4">Revise seu pedido</h2>

                <div class="card checkout-card mb-4" id="productList">
                    <!-- Logica implementada com finalizarCompra.js -->
                </div>

                <h2 class="section-title mb-4">Endereço de entrega</h2>

                <div class="address-card mb-3">
                    <div class="d-flex gap-3 mb-3">
                        <i class="bi bi-geo-alt-fill address-icon"></i>
                        <div class="flex-fill">
                            <h3 class="address-name"><%= lista.usu_nome %></h3>
                            <p class="address-details">
                                <%= listaAddress[0].endLogradouro %>, <%= listaAddress[0].endNumero %> - <%= listaAddress[0].endComplemento %><br>
                                <%= listaAddress[0].endBairro %><br>
                                <%= listaAddress[0].endEstado %><br>
                                CEP: <%= listaAddress[0].endCep %>
                            </p>
                            <p class="address-phone">
                                Telefone: <% if(lista.usu_numero) { %>
                                            (<%= lista.usu_numero.slice(0,2) %>) <%= lista.usu_numero.slice(2,7) %>-<%= lista.usu_numero.slice(7,11)%>
                                        <% } else { %>
                                            (00) 00000-000
                                        <% } %>
                            </p>
                        </div>
                    </div>
                    <div class="address-actions">
                        <a href="/profile/<%= user %>" class="btn btn-outline-primary flex-fill">Alterar endereço</a>
                        <a href="/profile/<%= user %>" class="btn btn-outline-primary flex-fill">Adicionar novo</a>
                    </div>
                </div>

                <div class="delivery-info">
                    <strong>Entrega prevista:</strong> 3 a 5 dias úteis
                </div>
            </section>

            <section id="payment-section" class="d-none">
                <h2 class="section-title mb-4">Forma de pagamento</h2>

                <div class="payment-methods mb-4">
                    <div class="payment-method selected" data-method="credit">
                        <div class="d-flex align-items-center gap-3">
                            <div class="payment-radio">
                                <div class="payment-radio-inner"></div>
                            </div>
                            <i class="bi bi-credit-card payment-icon"></i>
                            <div class="flex-fill">
                                <h4 class="payment-name">Cartão de Crédito</h4>
                                <p class="payment-description">Em até 12x sem juros</p>
                            </div>
                        </div>
                    </div>

                    <div class="payment-method" data-method="pix">
                        <div class="d-flex align-items-center gap-3">
                            <div class="payment-radio">
                                <div class="payment-radio-inner"></div>
                            </div>
                            <i class="bi bi-qr-code payment-icon"></i>
                            <div class="flex-fill">
                                <h4 class="payment-name">PIX</h4>
                                <p class="payment-description">Aprovação instantânea</p>
                            </div>
                        </div>
                    </div>

                    <div class="payment-method" data-method="boleto">
                        <div class="d-flex align-items-center gap-3">
                            <div class="payment-radio">
                                <div class="payment-radio-inner"></div>
                            </div>
                            <i class="bi bi-file-earmark-text payment-icon"></i>
                            <div class="flex-fill">
                                <h4 class="payment-name">Boleto Bancário</h4>
                                <p class="payment-description">Vencimento em 3 dias</p>
                            </div>
                        </div>
                    </div>

                    <div class="payment-method" data-method="wallet">
                        <div class="d-flex align-items-center gap-3">
                            <div class="payment-radio">
                                <div class="payment-radio-inner"></div>
                            </div>
                            <i class="bi bi-wallet2 payment-icon"></i>
                            <div class="flex-fill">
                                <h4 class="payment-name">Carteira Digital</h4>
                                <p class="payment-description">PayPal, PicPay, Mercado Pago</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div id="payment-details" class="card checkout-card p-4 mb-4">
                    <h3 class="payment-details-title mb-4">Dados do cartão</h3>

                    <div class="mb-3">
                        <label class="form-label">Número do cartão</label>
                        <input type="text" class="form-control" placeholder="0000 0000 0000 0000" maxlength="19">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Nome no cartão</label>
                        <input type="text" class="form-control" placeholder="João Silva">
                    </div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Validade</label>
                            <input type="text" class="form-control" placeholder="MM/AA" maxlength="5">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">CVV</label>
                            <input type="text" class="form-control" placeholder="123" maxlength="4">
                        </div>
                    </div>

                    <div class="mt-3">
                        <label class="form-label">Parcelas</label>
                        <select class="form-select">
                            <option>1x de R$ 5.029,50 sem juros</option>
                            <option>2x de R$ 2.514,75 sem juros</option>
                            <option>3x de R$ 1.676,50 sem juros</option>
                            <option>4x de R$ 1.257,38 sem juros</option>
                            <option>5x de R$ 1.005,90 sem juros</option>
                            <option>6x de R$ 838,25 sem juros</option>
                            <option>7x de R$ 718,50 sem juros</option>
                            <option>8x de R$ 628,69 sem juros</option>
                            <option>9x de R$ 558,83 sem juros</option>
                            <option>10x de R$ 502,95 sem juros</option>
                            <option>11x de R$ 457,23 sem juros</option>
                            <option>12x de R$ 419,13 sem juros</option>
                        </select>
                    </div>
                </div>

                <button id="btn-back" class="btn btn-outline-primary">
                    ← Voltar para endereço
                </button>
            </section>
        </div>

        <div class="col-lg-4">
            <div class="order-summary">
                <h3 class="summary-title mb-4">Resumo do pedido</h3>

                <div class="summary-items mb-4" id="listaValores">
                    <!-- Logica aplicada do script finalizarCompra -->
                </div>

                <button id="btn-continue" class="btn btn-primary btn-checkout w-100 mb-3">
                    Continuar para Pagamento
                </button>

                <div class="security-badge">
                    Compra 100% segura e protegida
                </div>
            </div>
        </div>
    </div>
</main>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script type="module" src="/js/animacoes.js"></script>
