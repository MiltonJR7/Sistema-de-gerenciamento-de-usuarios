<main class="main-content">
    <div class="content-header">
        <div>
            <h1 class="page-title">Endereços</h1>
            <p class="page-subtitle">Gerencie os endereços da plataforma</p>
        </div>
    </div>

    <div class="banner-decorative">
        <div class="banner-pattern"></div>
    </div>

    <div class="content-section">
        <div class="section-filters">
            <div class="search-container-inline">
                <input type="text" class="search-input" placeholder="Buscar endereços...">
                <svg class="search-icon" width="20" height="20" viewBox="0 0 20 20" fill="none">
                    <path d="M9 17A8 8 0 1 0 9 1a8 8 0 0 0 0 16zM19 19l-4.35-4.35" stroke="currentColor"
                        stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                </svg>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <div class="card-header-top">
                    <h2 class="card-title">Lista de Endereços</h2>
                </div>
            </div>

            <div class="table-container">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>CEP</th>
                            <th>Logradouro</th>
                            <th>Numero</th>
                            <th>Bairro</th>
                            <th>Cidade</th>
                            <th>Estado</th>
                            <th>ID usuario</th>
                            <th class="actions-col" colspan="1">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if(lista.length === 0) { %>
                            <tr>
                                <td colspan="10" class="empty-state">
                                    <div class="empty-content">
                                        <i class="fa fa-map-marker" style="font-size:64px;"></i>
                                        <p>Nenhum endereço cadastrado</p>
                                    </div>
                                </td>
                            </tr>
                        <% } else { %>

                            <% for(let i = 0; i < lista.length; i++) { %>
                                <tr>
                                    <td class="section-title">ENDEREÇO<hr></td>
                                    <td data-label="ID"><%= lista[i].endID %></td>
                                    <td data-label="CEP"><%= lista[i].endCep %></td>
                                    <td data-label="Logradouro"><%= lista[i].endLogradouro %></td>
                                    <td data-label="Numero"><%= lista[i].endNumero %></td>
                                    <td data-label="Bairro"><%= lista[i].endBairro %></td>
                                    <td data-label="Cidade"><%= lista[i].endCidade %></td>
                                    <td data-label="Estado"><%= lista[i].endEstado %></td>
                                    <td data-label="ID usuario"><%= lista[i].usuID %></td>
                                    <td data-label="Ações">
                                        <button class="btnDeletar" data-delete-address="<%= lista[i].endID %>">
                                            <i class="fa fa-trash-o"></i>
                                        </button>
                                    </td>
                                </tr>
                            <% } %>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>