<main class="main-content">
    <div class="content-header">
        <div>
            <h1 class="page-title">Produtos</h1>
            <p class="page-subtitle">Gerencie os produtos da plataforma</p>
        </div>
    </div>

    <div class="banner-decorative">
        <div class="banner-pattern"></div>
    </div>

    <div class="content-section">
        <div class="section-filters">
            <div class="search-container-inline">
                <input type="text" class="search-input" placeholder="Buscar produtos...">
                <svg class="search-icon" width="20" height="20" viewBox="0 0 20 20" fill="none">
                    <path d="M9 17A8 8 0 1 0 9 1a8 8 0 0 0 0 16zM19 19l-4.35-4.35" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <div class="card-header-top">
                    <h2 class="card-title">Lista de Produtos</h2>
                    <a href="/dashboard/products/add-new" class="btn-primary">Novo produto</a>
                </div>
            </div>

            <div class="table-container">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nome</th>
                            <th>Codigo de barras</th>
                            <th>Preco</th>
                            <th>Status</th>
                            <th class="actions-col" colspan="2">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if(lista.length === 0) { %>
                            <tr>
                                <td colspan="6" class="empty-state">
                                    <div class="empty-content">
                                        <i class="fa fa-cubes" style="font-size:64px;"></i>
                                        <p>Nenhum produto cadastrado</p>
                                    </div>
                                </td>
                            </tr>
                        <% } %>
                        <% for(let i=0; i < lista.length; i++) { %>
                            <tr>
                                <td data-label="ID"><%= lista[i].proID %></td>
                                <td data-label="Nome"><%= lista[i].proNome %></td>
                                <td data-label="Codigo de barras"><%= lista[i].proCodigoBarras %></td>
                                <td data-label="Preco"><%= lista[i].proPreco %></td>
                                <td data-label="Status">
                                    <% if(lista[i].proStatus === true) { %>
                                        <span class="usuarioAtivo">ATIVO</span>
                                    <% } else { %>
                                        <span class="usuarioInativo">INATIVO</span>
                                    <% } %>
                                </td>
                                <td data-label="Ações">
                                    <button class="btnEditar">
                                        <a href="/dashboard/products/<%= lista[i].proID %>"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                                    </button>
                                    <button class="btnDeletar" data-delete-product="<%= lista[i].proID %>">
                                        <i class="fa fa-trash-o" aria-hidden="true"></i>
                                    </button>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>