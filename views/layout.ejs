<body>
    <header class="header">
        <div class="container">
            <div class="header-content">
                <div class="header-logo">
                    <i class="fas fa-microchip"></i>
                    <span>TechStore</span>
                </div>

                <div class="header-search">
                    <input type="text" placeholder="Buscar produtos...">
                    <button><i class="fas fa-search"></i></button>
                </div>

                <div class="header-actions">
                    <button class="theme-toggle" onclick="toggleTheme(), trocarBanners()">
                        <i class="fas fa-moon"></i>
                    </button>
                    <button class="header-icon" id="abrirCarrinho" title="Abrir carrinho">
                        <i class="fas fa-shopping-cart"></i>
                    </button>

                    <div class="carrinho-backdrop" id="carrinhoBackdrop"></div>

                    <div class="carrinho-modal" id="carrinhoModal">
                        <div class="carrinho-header">
                            <h5 class="carrinho-header-titulo">
                                <i class="bi bi-bag-check carrinho-header-icone"></i>
                                Seu Carrinho
                            </h5>
                            <button class="carrinho-btn-fechar" id="fecharCarrinho" title="Fechar carrinho">
                                <i class="bi bi-x-lg"></i>
                            </button>
                        </div>
                        <div class="carrinho-body" id="estruturaCompleta">
                            <!-- logica vindo do carrinho -->
                        </div>

                        <!-- Footer -->
                        <div class="carrinho-footer">
                            <div class="carrinho-subtotal" id="precoFinal">
                                <!-- logica vindo do carrinho -->
                            </div>
                            <button class="carrinho-acao carrinho-continuar" id="continuarComprando">
                                <i class="bi bi-arrow-left"></i>
                                Continuar Comprando
                            </button>

                            <a href="/checkout" class="carrinho-acao carrinho-finalizar" id="finalizarCompra">
                                <i class="bi bi-check-circle"></i>
                                Finalizar Compra
                            </a>
                        </div>
                    </div>
                    <button class="header-icon">
                        <% if(user) { %>
                            <a href="/profile/<%= user %>">
                                <i class="fas fa-user"></i>
                            </a>
                            <% } else { %>
                            <a href="/connect/login">
                                <i class="fas fa-user"></i>
                            </a>
                        <% } %>
                    </button>
                </div>
            </div>
        </div>
    </header>

    <div class="categories-navbar">
